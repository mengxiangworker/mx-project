<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="mx.template.login.dao.UserDao" >


    <sql id="BASE_TABLE">
      user
    </sql>

    <sql id="BASE_COLUMN">
      id,user_name,id_card,password
    </sql>


    <select id="selectAll" resultType="mx.template.login.entity.User">
        SELECT
        <include refid="BASE_COLUMN"/>
        FROM
        <include refid="BASE_TABLE"/>
    </select>


</mapper>
